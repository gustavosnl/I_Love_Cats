<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="fontFamily">@font/signika_negative</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DetailTitle">
        <item name="android:textSize">@dimen/breed_title_text_size</item>
        <item name="fontFamily">@font/signika_negative_bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="BreedInfo">
        <item name="android:textSize">@dimen/cat_info_text_size</item>
        <item name="fontFamily">@font/signika_negative_semibold</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BreedInfo.BreedDescription">
        <item name="android:textSize">@dimen/cat_description_text_size</item>
        <item name="fontFamily">@font/signika_negative_light</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">left</item>
        <item name="android:textAlignment">inherit</item>
    </style>

    <style name="RareBreedBadge">
        <item name="android:textSize">@dimen/cat_description_text_size</item>
        <item name="fontFamily">@font/signika_negative</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/rare_breed_bg</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableEndCompat">@drawable/ic_rare_breeding</item>
    </style>


</resources>